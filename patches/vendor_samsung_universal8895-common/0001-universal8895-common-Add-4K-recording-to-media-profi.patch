Subject: [PATCH] universal8895-common: Add 4K recording to media profiles

Signed-off-by: Diep Quynh <remilia.1505@gmail.com>
---
 proprietary/etc/media_profiles.xml | 13 +++++++++++++
 1 file changed, 13 insertions(+)

diff --git a/proprietary/etc/media_profiles.xml b/proprietary/etc/media_profiles.xml
index 989d3dd..5898c8d 100644
--- a/proprietary/etc/media_profiles.xml
+++ b/proprietary/etc/media_profiles.xml
@@ -182,6 +182,19 @@
              channels="2" />
     </EncoderProfile>
 
+    <EncoderProfile quality="2160p" fileFormat="mp4" duration="30">
+      <Video codec="h264"
+             bitRate="17000000"
+             width="3840"
+             height="2160"
+             frameRate="30" />
+
+      <Audio codec="aac"
+             bitRate="256000"
+             sampleRate="48000"
+             channels="2" />
+    </EncoderProfile>
+
     <EncoderProfile quality="timelapselow" fileFormat="mp4" duration="30">
       <Video codec="h264"
              bitRate="384000"
